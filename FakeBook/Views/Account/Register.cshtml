@model FakeBook.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="row">
    <div class="col-md-2 col-md-offset-4">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="div-form">


                @Html.AntiForgeryToken()
                <h4 class="form-header">Register Form</h4>

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">

                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "FirstName", @class = "form-control form-input" })

                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "LastName", @class = "form-control form-input" })

                </div>
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control form-input" })

                </div>
                <div class="form-group">

                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control form-input" })

                </div>
                <div class="form-group">

                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control form-input" })

                </div>
                <div class="col-md-12 form-group">
                    @Html.Label("user Role", new { @class = "  control-label" })
                    @*@Html.DropDownList("Name")*@
                    @Html.DropDownList("UserRole", (SelectList)ViewBag.Name, " ")
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary-form" value="Register" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

